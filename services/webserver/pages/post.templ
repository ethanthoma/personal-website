package pages

import (
	"personal-website/internal"
	"personal-website/services/webserver/layouts"
)

type Post struct {
	Pages []string
}

templ (p Post) View(post internal.Post) {
	@layouts.Base{
		Pages:       p.Pages,
		PageCurrent: "blog",
		Title:       "Ethan Thoma \\ " + post.Title,
	}.View() {
		<article class="row-start-1 col-[2/-2] content relative">
			<time class="text-content/60">{ post.Date.Format("20060102") }</time>
			@templ.Raw(post.HTML)
		</article>
	}
}
