package pages

import (
	"personal-website/internal"
	"personal-website/services/webserver/layouts"
)

type Blog struct {
	Pages []string
}

templ (p Blog) View(posts []internal.Post) {
	@layouts.Base{
		Pages:       p.Pages,
		PageCurrent: "blog",
		Title:       "Ethan Thoma \\ Blog",
	}.View() {
		<article>
			<h1 class="text-2xl mb-m font-extrabold leading-none tracking-tight">Blog</h1>
			<ul class="space-y-s list-inside">
				for _, post := range posts {
					<li class="flex">
						<time>{ post.Date.Format("20060102") }</time>
						<span class="px-2xs">-</span>
						<a
							class="underline"
							href={ templ.URL("/post/" + post.Slug) }
							hx-get={ "/post/" + post.Slug }
							hx-target="main"
							hx-select="main"
							hx-push-url={ "/post/" + post.Slug }
						><h2>{ post.Title }</h2></a>
					</li>
				}
			</ul>
		</article>
	}
}
