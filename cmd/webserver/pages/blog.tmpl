{{ define "title" }}
    <title>Ethan Thoma \ Blog</title>
{{ end }}

{{ define "shared-content" }}
    {{ template "title" . }}
    <h1>Blog</h1>
    <ul class="posts">
        {{ range $post := .Posts }}
           <ul>{{ template "post" $post }}</ul>
        {{ end }}
    </ul>
{{ end }}

{{ define "content" }}
    {{ template "shared-content" . }}

    {{ template "nav" . }}
{{ end }}

{{ define "page" }}
    <!DOCTYPE html>
    <html lang="en">
    {{ template "head" . }}
    <body>
        {{ template "header" . }}
        <main>
            {{ template "shared-content" . }}
        </main>
        {{ template "footer" . }}
    </body>
    </html>
{{ end }}
