{{ define "title" }}
    <title>Ethan Thoma \ Blog</title>
{{ end }}

{{ define "content" }}
    {{ template "title" . }}
    <h1>Blog</h1>
    <ul class="posts">
        {{ range $post := .Posts }}
           {{ template "post" $post }}
        {{ end }}
    </ul>
{{ end }}

{{ define "page" }}
    <!DOCTYPE html>
    <html lang="en">
    {{ template "head" . }}
    <body>
        {{ template "header" . }}
        <main>
            {{ template "content" . }}
        </main>
        {{ template "footer" . }}
    </body>
    </html>
{{ end }}
