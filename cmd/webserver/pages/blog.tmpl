{{ define "title" }}
    <title>Ethan Thoma \ Blog</title>
{{ end }}

{{ define "shared-content" }}
    {{ template "title" . }}
    <h1>Blog</h1>
    <ul class="posts" style="margin-block-start: var(--space-2xs-xs);">
        {{ range $post := .Posts }}
           <ul class="post">
               <time>{{formatDate .Date }}</time>
               <span class="spacer">-</span>
               <a
                   href="/post/{{ .Slug }}"
                   hx-get="/post/{{ .Slug }}/content"
                   hx-target="main"
                   hx-push-url="/post/{{ .Slug }}"
               ><h2>{{ .Title }}</h2></a>
           </ul>
        {{ end }}
    </ul>
{{ end }}

{{ define "content" }}
    {{ template "shared-content" . }}

    {{ template "nav" . }}
{{ end }}

{{ define "page" }}
    <!DOCTYPE html>
    <html lang="en">
    {{ template "head" . }}
    <body>
        {{ template "header" . }}
        <main>
            {{ template "shared-content" . }}
        </main>
        {{ template "footer" . }}
    </body>
    </html>
{{ end }}
