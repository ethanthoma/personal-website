{{ define "title" }}
    <title>Ethan Thoma \ {{ .Post.Title }}</title>
{{ end }}

{{ define "shared-content" }}
    {{ template "title" . }}
    <article class="content">
        {{ .Post.Content }}
    </article>
{{ end }}

{{ define "content" }}
    {{ template "shared-content" . }}

    {{ template "nav" . }}
{{ end }}

{{ define "page" }}
    <!DOCTYPE html>
    <html lang="en">
    {{ template "head" . }}
    <body>
        {{ template "header" . }}
        <main>
            {{ template "shared-content" . }}
        </main>
        {{ template "footer" . }}
    </body>
    </html>
{{ end }}
